<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/action_text_margin"
        android:layout_marginBottom="@dimen/action_text_margin"
        android:layout_marginStart="@dimen/action_avatar_space"
        android:layout_marginEnd="@dimen/card_padding"
        android:textSize="@dimen/card_text"
        android:textStyle="normal"
        tools:text="@string/dialogs__all__wake_up" />

</LinearLayout>
